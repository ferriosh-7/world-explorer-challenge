    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-vector-icons": "^10.0.3"
  },
  "devDependencies": {
    "@react-native-community/cli": "^20.0.2",
    "@react-native/metro-config": "0.81.4",
